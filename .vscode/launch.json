    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html/themes/custom_themes": "/workspace/themes",
                "/var/www/html/modules/custom": "/workspace/modules",
                "/var/www/html/modules/custom_features": "/workspace/features",
                "/var/www/html/web/themes/custom_themes": "/workspace/web/themes",
                "/var/www/html/web/modules/custom": "/workspace/web/modules",
                "/var/www/html/web/modules/custom_features": "/workspace/web/features",
                "/var/www/html": "/workspace"
            }
        }
    ]
}
